{
	"name": "VideoGrab Ultimate",
	"version": "1",
	"manifest_version": 2,

	"description": "Download video and audio files with ease.",
	"icons": { "32": "icon32.png", "64": "icon64.png", "128": "icon128.png" },

	"browser_action": {
		"default_icon": "icon128.png"
	},
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"sandbox": {
		"pages": ["sandbox.html"]	
	},
	"offline_enabled": true,
	"permissions": [ "http://*/*", "https://*/*"]
}
